{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": ".build",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "types": ["jest-extended"],
    "paths": {
      "@backend/*": ["../backend/src/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "./src",
    "./scripts/**/*.ts",
    "./test",
    "./typings",
    "./assets",
    "./tf/cloudfront_functions/*.js",
    "./jest.*.ts"
  ],
  "exclude": ["**/node_modules", ".build/*", "**/.*/", "tmp/**", "../backend"],
  "references": [{ "path": "../backend" }]
}
