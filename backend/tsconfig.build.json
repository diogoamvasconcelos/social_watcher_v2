{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": ".build",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["**/node_modules", "build/*", "src/**/*.test.ts", "**/.*/", "tmp/**"]
}
