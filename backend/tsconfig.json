{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": ".build",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@config/*": ["./config/*"]
    },
    "sourceMap": true
  },
  "include": ["src/", "scripts/**/*.ts", "test/", "typings/", "config/"],
  "exclude": ["**/node_modules", ".build/*", "**/.*/", "tmp/**"]
}
