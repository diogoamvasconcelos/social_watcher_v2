{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": ".build",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"]
    }
  },
  "include": ["src/", "scripts/**/*.ts", "test/", "typings/"],
  "exclude": ["**/node_modules", ".build/*", "**/.*/", "tmp/**"]
}
